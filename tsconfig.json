{
  "compilerOptions": {
    "lib": ["dom","dom.iterable","esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ES6",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "plugins": [{"name": "next"}],
    "paths": { 
      "@/*": ["./*"],
      "@styles/*": ["./styles/*"],
      "@components/*": ["./components/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/tailwindcss.d.ts"],
  "exclude": ["node_modules", ".next"]
}
